<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="hr_employee_form" model="ir.ui.view">
        <field name="name">Employee Form: add contribution types</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <group name="active_group" position="after">
                <group name="contribution_types" string="Applicable Contribution Types">
                    <field name="contribution_type_ids" nolabel="1" colspan="2">
                        <tree>
                            <field name="name" string="Type of Contribution"/>
                            <field name="register_id"/>
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>

</odoo>
