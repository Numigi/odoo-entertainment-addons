<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Show place type -->

    <record id="show_place_type_view_search" model="ir.ui.view">
        <field name="name">show.place.type.view.search</field>
        <field name="model">show.place.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="show_place_type_view_tree" model="ir.ui.view">
        <field name="name">show.place.type.view.tree</field>
        <field name="model">show.place.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="show_place_type_action" model="ir.actions.act_window">
        <field name="name">Shows Places Types</field>
        <field name="res_model">show.place.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="show_place_type_menu"
              name="Shows Places Types"
              action="show_place_type_action"
              parent="contacts.res_partner_menu_config"
              sequence="9"
              groups="sales_team.group_sale_salesman"/>

    <!-- Show place configuration -->

    <record id="show_place_configuration_view_search" model="ir.ui.view">
        <field name="name">show.place.configuration.view.search</field>
        <field name="model">show.place.configuration</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>


    <record id="show_place_configuration_view_tree" model="ir.ui.view">
        <field name="name">show.place.configuration.view.tree</field>
        <field name="model">show.place.configuration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>


    <record id="show_place_configuration_view_form" model="ir.ui.view">
        <field name="name">show.place.configuration.view.form</field>
        <field name="model">show.place.configuration</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title" style="width:30%%;">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <div>
                        <field name="active" style="vertical-align: middle;display: inline-block;"/>
                        <label for="active" string="Active" style="padding-right:5%%;"/>
                    </div>

                    <div>
                        <label for="description" string="Description of place"
                               style="display:block;margin-bottom:1%%;"/>
                        <field name="description" nolabel="1"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="show_place_configuration_action" model="ir.actions.act_window">
        <field name="name">Shows Places Configuration</field>
        <field name="res_model">show.place.configuration</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="show_place_configuration_menu"
              name="Shows Places Configuration"
              action="show_place_configuration_action"
              parent="contacts.res_partner_menu_config"
              sequence="10"
              groups="sales_team.group_sale_salesman"/>

</odoo>
