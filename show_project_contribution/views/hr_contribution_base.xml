<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="hr_contribution_base_form" model="ir.ui.view">
        <field name="name">Contribution Base Form</field>
        <field name="model">hr.contribution.base</field>
        <field name="arch" type="xml">
            <form string="Contribution Base">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group name="group_1">
                            <field name="amount"/>
                            <field name="type_id"/>
                            <label for="description"/>
                            <newline/>
                            <field name="description" nolabel="1" colspan="2"/>
                        </group>
                        <group name="group_2">
                        </group>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_contribution_base_list" model="ir.ui.view">
        <field name="name">Contribution Base List</field>
        <field name="model">hr.contribution.base</field>
        <field name="arch" type="xml">
            <tree string="Contribution Bases">
                <field name="type_id"/>
                <field name="amount"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="hr_contribution_base_search" model="ir.ui.view">
        <field name="name">Contribution Base Search</field>
        <field name="model">hr.contribution.base</field>
        <field name="arch" type="xml">
            <search string="Search Contribution Bases">
                <field name="type_id"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
           </search>
        </field>
    </record>

    <record id="action_hr_contribution_base" model="ir.actions.act_window">
        <field name="name">Contribution Bases</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.contribution.base</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_contribution_base_list"/>
        <field name="search_view_id" ref="hr_contribution_base_search"/>
    </record>

</odoo>
