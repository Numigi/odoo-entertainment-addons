<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="hr_contribution_type_form" model="ir.ui.view">
        <field name="name">Contribution Type Form</field>
        <field name="model">hr.contribution.type</field>
        <field name="arch" type="xml">
            <form string="Contribution Type">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="group_1">
                            <field name="code"/>
                            <field name="register_id"/>
                            <label for="description"/>
                            <newline/>
                            <field name="description" nolabel="1" colspan="2"/>
                        </group>
                        <group name="group_2">
                        </group>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_contribution_type_list" model="ir.ui.view">
        <field name="name">Contribution Type List</field>
        <field name="model">hr.contribution.type</field>
        <field name="arch" type="xml">
            <tree string="Contribution Types">
                <field name="code"/>
                <field name="name"/>
                <field name="register_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="hr_contribution_type_search" model="ir.ui.view">
        <field name="name">Contribution Type Search</field>
        <field name="model">hr.contribution.type</field>
        <field name="arch" type="xml">
            <search string="Search Contribution Types">
                <field name="name" filter_domain="['|', ('code', 'ilike', self), ('name', 'ilike', self)]"/>
                <field name="register_id"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
           </search>
        </field>
    </record>

    <record id="action_hr_contribution_type" model="ir.actions.act_window">
        <field name="name">Contribution Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.contribution.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_contribution_type_list"/>
        <field name="search_view_id" ref="hr_contribution_type_search"/>
    </record>

</odoo>
