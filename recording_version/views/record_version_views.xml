<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="record_version_view_search" model="ir.ui.view">
        <field name="name">record.version.view.search</field>
        <field name="model">record.version</field>
        <field name="arch" type="xml">
            <search>
               <field name="name"/>
            </search>
        </field>
    </record>
    
    <record id="record_version_view_tree" model="ir.ui.view">
        <field name="name">record.version.view.tree</field>
        <field name="model">record.version</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="record_version_action" model="ir.actions.act_window">
        <field name="name">Versions</field>
        <field name="res_model">record.version</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
     </record>

    <menuitem id="record_version_menu"
              name="Versions"
              action="record_version_action"
              parent="recording.menu_config"
              sequence="7"
              groups="recording.group_manager"/>


</odoo>
