<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Genres -->

    <record id="music_type_view_search" model="ir.ui.view">
        <field name="name">music.type.view.search</field>
        <field name="model">music.type</field>
        <field name="arch" type="xml">
            <search>
               <field name="name"/>
            </search>
        </field>
    </record>
    
    <record id="music_type_view_tree" model="ir.ui.view">
        <field name="name">music.type.view.tree</field>
        <field name="model">music.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="music_type_action" model="ir.actions.act_window">
        <field name="name">Genres</field>
        <field name="res_model">music.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
     </record>

    <menuitem id="music_type_menu"
              name="Genres"
              action="music_type_action"
              parent="recording.menu_config"
              sequence="4"
              groups="recording.group_manager"/>

    <!-- SubGenres -->

    <record id="music_subtype_view_search" model="ir.ui.view">
        <field name="name">music.subtype.view.search</field>
        <field name="model">music.subtype</field>
        <field name="arch" type="xml">
            <search>
               <field name="name"/>
            </search>
        </field>
    </record>

    <record id="music_subtype_view_tree" model="ir.ui.view">
        <field name="name">music.subtype.view.tree</field>
        <field name="model">music.subtype</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="music_subtype_action" model="ir.actions.act_window">
        <field name="name">Subgenres</field>
        <field name="res_model">music.subtype</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
     </record>

    <menuitem id="music_subtype_menu"
              name="Subgenres"
              action="music_subtype_action"
              parent="recording.menu_config"
              sequence="5"
              groups="recording.group_manager"/>


    <!-- Tags -->

    <record id="music_tag_view_search" model="ir.ui.view">
        <field name="name">music.tag.view.search</field>
        <field name="model">music.tag</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>


    <record id="music_tag_view_tree" model="ir.ui.view">
        <field name="name">music.tag.view.tree</field>
        <field name="model">music.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Name"/>
            </tree>
        </field>
    </record>


    <record id="music_tag_view_form" model="ir.ui.view">
        <field name="name">music.tag.view.form</field>
        <field name="model">music.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_category_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="music_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">music.tag</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="music_tag_menu"
              name="Tags"
              action="music_tag_action"
              parent="recording.menu_config"
              sequence="5"
              groups="recording.group_manager"/>


</odoo>
